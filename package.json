{
  "name": "cafeteria-api",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "pm2:start": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop cafeteria-api",
    "pm2:restart": "pm2 restart cafeteria-api --update-env",
    "pm2:reload": "pm2 reload cafeteria-api --update-env",
    "pm2:delete": "pm2 delete cafeteria-api",
    "pm2:logs": "pm2 logs cafeteria-api --lines 100",
    "pm2:status": "pm2 status",
    "deploy:remote": "git fetch --all && git reset --hard origin/main && npm ci --omit=dev && npm run build && pm2 reload cafeteria-api --update-env",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@bluessu/meal-scraper": "^0.1.0",
    "@prisma/adapter-better-sqlite3": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.7",
    "hono": "^4.12.3",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "prisma": "^7.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  }
}
